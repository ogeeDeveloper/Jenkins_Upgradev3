pipeline {
    agent none

    environment {
        VERSION = '0.1.0'
        RELEASE_VERSION = 'R.2'
    }

    stages {
        stage('Audit Tools') {
            agent { label 'slave01' }
            steps {
                sh '''
                    java -version
                    mvn -version
                '''
                sh 'printenv'
                sh 'ls -l $WORKSPACE'
            }
        }

        stage('Unit Test') {
            agent { label 'slave01' }
            steps {
                dir('./java-tomcat-sample') {
                    sh '''
                        echo "Executing Unit Tests..."
                        mvn test
                    '''
                }
            }
        }

        stage('Security Scan') {
            agent { label 'slave01' }
            steps {
                sh '''
                    echo "Running Security Scans..."
                    # Add commands for security scanning using tools like SonarQube
                '''
            }
        }

        stage('Build') {
            agent { label 'slave01' }
            steps {
                echo "Building version: ${VERSION} with suffix: ${RELEASE_VERSION}"
                sh 'mvn -f java-tomcat-sample/pom.xml clean package'
            }
        }

        stage('Deploy') {
            agent { label 'slave01' }
            steps {
                echo "Deploying version: ${VERSION} with suffix: ${RELEASE_VERSION}"
                # Add deployment steps here
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace'
            deleteDir() // clean up our workspace
        }
    }
}
