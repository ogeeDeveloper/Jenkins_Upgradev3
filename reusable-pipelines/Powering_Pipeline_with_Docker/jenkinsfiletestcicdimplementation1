pipeline {
    agent none

    environment {
        VERSION = '0.1.0'
        RELEASE_VERSION = 'R.2'
        LOCAL_REGISTRY = 'localhost:5000'
        DOCKER_IMAGE = "${LOCAL_REGISTRY}/your-app:${VERSION}"
    }

    stages {
        stage('Audit Tools') {
            agent { label 'slave01' }
            steps {
                sh '''
                    java -version
                    mvn -version
                '''
                sh 'printenv'
                sh 'ls -l $WORKSPACE'
            }
        }

        stage('Unit Test') {
            agent { label 'slave01' }
            steps {
                dir('./java-tomcat-sample') {
                    sh '''
                        echo "Executing Unit Tests..."
                        mvn test
                    '''
                }
            }
        }

        stage('Security Scan') {
            agent { label 'slave01' }
            steps {
                sh '''
                    echo "Running Security Scans..."
                    # Add commands for security scanning using tools like SonarQube
                '''
            }
        }

        stage('Build') {
            agent { label 'slave01' }
            steps {
                echo "Building version: ${VERSION} with suffix: ${RELEASE_VERSION}"
                sh 'mvn -f java-tomcat-sample/pom.xml clean package'
            }
        }

        stage('Docker Build & Push') {
            agent { label 'slave01' }
            steps {
                script {
                    docker.build(DOCKER_IMAGE).push()
                }
            }
        }

        stage('Deploy') {
            agent { label 'slave01' }
            steps {
                script {
                    sh '''
                        echo "Deploying Docker container..."
                        docker rm -f your-app || true
                        docker run -d --name your-app -p 8080:8080 ${DOCKER_IMAGE}
                    '''
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace'
            deleteDir() // clean up our workspace
        }
    }
}
