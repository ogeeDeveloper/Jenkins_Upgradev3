pipeline {
    agent none  # Allows different stages to use different agents

    environment {
        VERSION = '0.1.0'
        RELEASE_VERSION = 'R.2'
    }

    stages {
        stage('Prepare') {
            agent { label 'docker-capable' }  # Ensure agent has Docker
            steps {
                checkout scm  # Check out source code from repository
            }
        }

        stage('Audit tools') {
            agent { label 'docker-capable' }
            steps {
                script {
                    docker.image('maven:latest').inside('-u root') {
                        sh '''
                            java -version
                            mvn -version
                        '''
                        sh 'printenv'
                        sh 'ls -l $WORKSPACE'
                    }
                }
            }
        }

        stage('Unit Test') {
            agent { label 'docker-capable' }
            steps {
                script {
                    docker.image('maven:latest').inside('-u root') {
                        dir('./java-tomcat-sample') {
                            sh 'mvn test'
                        }
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            agent { label 'docker-capable' }
            steps {
                script {
                    docker.image('maven:latest').inside('-u root') {
                        // Assuming SonarQube scanner is configured in Maven settings
                        sh 'mvn sonar:sonar'
                    }
                }
            }
        }

        stage('Build and Package') {
            agent { label 'docker-capable' }
            steps {
                script {
                    docker.image('maven:latest').inside('-u root') {
                        sh 'mvn -f java-tomcat-sample/pom.xml clean package'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace'
            deleteDir()
        }
    }
}
